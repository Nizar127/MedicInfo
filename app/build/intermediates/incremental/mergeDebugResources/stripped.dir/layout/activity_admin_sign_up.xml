<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminSignUp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="30dp">

            <ImageView
                android:id="@+id/login_logo"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:src="@mipmap/heart" />

            <TextView
                android:id="@+id/login_hint_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="@color/splashname"
                android:layout_marginLeft="30dp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/adminsignup_username_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/candyapple"
                android:padding="20dp"
                android:layout_margin="15dp"
                android:hint="Username"
                android:inputType="textPersonName"
                android:textColor="@color/Black"
                android:textColorHint="@color/splashname"
                android:textSize="17sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/adminsignup_email_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/candyapple"
                android:padding="20dp"
                android:layout_margin="15dp"
                android:hint="Email"
                android:inputType="textPersonName"
                android:textColor="@color/Black"
                android:textColorHint="@color/splashname"
                android:textSize="17sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/login_hint_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="@color/Black"
                android:layout_marginLeft="30dp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/adminsignup_password_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/candyapple"
                android:padding="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:hint="Password"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890"
                android:inputType="textFilter"
                android:password="true"
                android:textColor="@color/Black"
                android:textColorHint="@color/splashname"
                android:textSize="17sp"
                android:textStyle="bold"/>

            <CheckBox
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Show Password"
                android:buttonTint="@color/Gray"
                android:textColor="@color/Black"
                android:layout_marginRight="70dp"
                android:layout_marginTop="7dp"
                android:id="@+id/adminlogin_checkbox"/>

            <LinearLayout
                android:id="@+id/linear_layout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/login_password_input"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="30dp">



            </LinearLayout>

            <Button
                android:id="@+id/admin_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear_layout_1"
                android:backgroundTint="@color/Green"
                android:fontFamily="@font/audiowide"
                android:layout_margin="15dp"
                android:padding="20dp"
                android:textSize="25dp"
                android:text="Sign Up as Admin"
                android:textColor="@color/White"/>


            <TextView
                android:id="@+id/Adminloginsystem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login as ADMIN"
                android:gravity="center_horizontal"
                android:fontFamily="@font/audiowide"
                android:textSize="15sp"
                android:textColor="@color/black"/>


            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />


        </LinearLayout>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>