<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:padding="5dp"
    android:elevation="20dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/card_selector"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
                android:id="@+id/thenametask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Patient ID :"
                    android:textSize="30sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/audiowide"/>

                <TextView
                    android:id="@+id/IDPatientTask"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/audiowide"
                    android:text="Try"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/thenameIDtask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Patient Name :"
                    android:textSize="30sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/audiowide"/>

                <TextView
                    android:id="@+id/namePatientTask"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/audiowide"
                    android:text="Try"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stent Due :"
                    android:textSize="30sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/audiowide"/>

                <TextView
                    android:id="@+id/stentDuePatientTask"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/audiowide"
                    android:text="Try"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diagnosis :"
                    android:textSize="30sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/audiowide"/>

                <TextView
                    android:id="@+id/diagnosisPatientTask"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/audiowide"
                    android:text="Try"
                    />

            </LinearLayout>

        </LinearLayout>

        <CheckBox
            android:id="@+id/checkboxTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="2.50"
            android:scaleY="2.50"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            />


    </LinearLayout>



</androidx.cardview.widget.CardView>