<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:elevation="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="15dp"
    android:background="@drawable/card_selector"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="Patient Name: "
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/patientNameView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Got"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat"/>
            </LinearLayout>


            <Button
                android:id="@+id/statusRemarksBtn"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:backgroundTint="@color/Lime"
                android:fontFamily="@font/montserrat"
                android:text="Past"
                android:textColor="@color/colorBlackBackground"
                android:textSize="20sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/firststartStentView"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Type of Stent :"
                android:padding="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"/>


            <TextView
                android:id="@+id/typeStentView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Type of stent due"
                android:padding="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/firstpatientDiagnosisView"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Patient Diagnosis :"
                android:padding="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"/>

            <TextView
                android:id="@+id/patientDiagnosisView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Patient Diagnosis"
                android:padding="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"/>


        </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <TextView
              android:id="@+id/firststentDueView"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="20sp"
              android:text="Stent Due"
              android:padding="20dp"
              android:textColor="@color/black"
              android:fontFamily="@font/montserrat"/>

          <TextView
              android:id="@+id/stentDueView"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="20sp"
              android:text="Stent Due"
              android:padding="20dp"
              android:textColor="@color/black"
              android:fontFamily="@font/montserrat"/>
      </LinearLayout>






        <Button
            android:id="@+id/updateBtnCond"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:text="Update"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="15sp"
            android:fontFamily="@font/audiowide"
            android:textColor="@color/white"
            android:backgroundTint="@color/MediumBlue"/>


    </LinearLayout>


</androidx.cardview.widget.CardView>